@using JobJabs.Entity
@model JobJabs.ViewModel.VM_Login
@{
    Layout = null;
    SessionClass session = new SessionClass();
    int dispayType = (ViewBag.DisplayType == null ? 1 : (int)ViewBag.DisplayType);
}
<!DOCTYPE html>
<html lang="en">
<!--begin::Head-->
<head>
    <base href="../../../">
    <meta charset="utf-8" />
    <title>JobJabs</title>
    <meta name="description" content="Add user example" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link rel="canonical" href="https://keenthemes.com/metronic" />
    <!--begin::Fonts-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700" />
    <!--end::Fonts-->
    <!--begin::Page Custom Styles(used by this page)-->
    <link href="@Url.Content("~/assets/ERP/css/pages/login/login-1.css")" rel="stylesheet" type="text/css" />
    <!--end::Page Custom Styles-->
    <!--begin::Global Theme Styles(used by all pages)-->
    <link href="@Url.Content("~/assets/ERP/plugins/global/plugins.bundle.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/assets/ERP/plugins/custom/prismjs/prismjs.bundle.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/assets/ERP/css/style.bundle.css")" rel="stylesheet" type="text/css" />
    <!--end::Global Theme Styles-->
    <!--begin::Layout Themes(used by all pages)-->
    <link href="@Url.Content("~/assets/ERP/css/themes/layout/header/base/light.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/assets/ERP/css/themes/layout/header/menu/light.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/assets/ERP/css/themes/layout/brand/dark.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/assets/ERP/css/themes/layout/aside/dark.css")" rel="stylesheet" type="text/css" />
    <!--end::Layout Themes-->
    <link rel="shortcut icon" href="@Url.Content("~/Assets/Portal/Images/logo.png")" />
    @Scripts.Render("~/bundles/jquery")
</head>
<!--end::Head-->
<!--begin::Body-->
<body id="kt_body" class="header-fixed header-mobile-fixed subheader-enabled subheader-fixed aside-enabled aside-fixed aside-minimize-hoverable page-loading">
    <!--begin::Main-->
    <div class="d-flex flex-column flex-root">
        <!--begin::Login-->
        <div class="login login-1 login-signin-on d-flex flex-column flex-lg-row flex-column-fluid bg-white" id="kt_login">
            <!--begin::Aside-->
            <div class="login-aside d-flex flex-column flex-row-auto" style="background-color: #F2C98A;">
                <!--begin::Aside Top-->
                <div class="d-flex flex-column-auto flex-column pt-lg-10 pt-15">
                    <!--begin::Aside header-->
                    <a href="#" class="text-center mb-5">
                        <img src="https://jobjabs.com/assets/images/logo.png" class="max-h-110px" alt="" />
                    </a>
                    <!--end::Aside header-->
                    <!--begin::Aside title-->
                    <h3 class="font-weight-bolder text-center font-size-h4 font-size-h1-lg" style="color: #986923;">
                        Franchise
                        <br /><span style="color:darkcyan;font-size:20px;line-height:37px;">Join Us and Grow with us</span>
                    </h3>
                    <!--end::Aside title-->
                </div>
                <!--end::Aside Top-->
                <!--begin::Aside Bottom-->
                <div class="aside-img d-flex flex-row-fluid bgi-no-repeat bgi-position-y-bottom bgi-position-x-center" style="background-image: url(assets/ERP/media/svg/illustrations/login-visual-1.svg)"></div>
                <!--end::Aside Bottom-->
            </div>
            <!--begin::Aside-->
            <!--begin::Content-->
            <div class="login-content flex-row-fluid d-flex flex-column justify-content-center position-relative overflow-hidden p-7 mx-auto">
                <!--begin::Content body-->
                <div class="d-flex flex-column-fluid flex-center">
                    <!--begin::Signin-->
                    <div class="login-form login-signin">
                        <!--begin::Title-->
                        <div class="pb-13 pt-lg-0 pt-5">
                            @if (dispayType == 2)
                            {
                                <h5 class="font-weight-bolder text-dark font-size-h4 font-size-h1-lg">Your password has been changed successfully</h5>
                            }
                            else
                            {
                                <h5 class="font-weight-bolder text-dark font-size-h4 font-size-h1-lg">You have succesfully logged out of JobJabs</h5>
                            }
                            <br />
                            <span class="text-muted font-weight-bold font-size-h4" style="margin-top:30px;">
                                Login again  <a href="@(Url.Content("~/Login"))" id="kt_login_signup" class="text-primary font-weight-bolder" style="text-decoration:underline">here</a>
                            </span>
                        </div>
                        <!--begin::Title-->

                    </div>
                    <!--end::Signin-->


                </div>
                <!--end::Content body-->
                <!--begin::Content footer-->
                <div class="footer bg-white py-4 d-flex flex-lg-column" id="kt_footer">
                    <!--begin::Container-->
                    <div class="container-fluid d-flex flex-column flex-md-row align-items-center justify-content-between">
                        <!--begin::Copyright-->
                        <div class="text-dark order-2 order-md-1">
                            <span class="text-muted font-weight-bold mr-2">2020©</span>
                            <a href="https://Jobjabs.com" target="_blank" class="text-dark-75 text-hover-primary">JobJabs</a>
                        </div>
                        <!--end::Copyright-->

                    </div>
                    <!--end::Container-->
                </div>
                <!--end::Footer-
                <!--end::Content footer-->
            </div>
            <!--end::Content-->
        </div>
        <!--end::Login-->
    </div>




    @Scripts.Render("~/bundles/jqueryval")

</body>
<!--end::Body-->
</html>