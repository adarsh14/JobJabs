@using JobJabs.Entity;
@model JobJabs.ViewModel.VM_ChangePassword
@{
    ViewBag.Title = "Change Password";
}

<style type="text/css">
    .usermenu > .menu-link .menu-icon.svg-icon svg g [fill] {
        fill: #494b74 !important;
    }

    .usermenu > .menu-link .menu-text {
        color: #a2a3b7 !important;
    }
    .changepasswordmenu > .menu-link .menu-icon.svg-icon svg g [fill] {
        fill: #3699FF !important;
    }

    .changepasswordmenu > .menu-link .menu-text {
        color: white !important;
    }
</style>
<!--begin::Card-->
<div class="card card-custom card-transparent">
    <div class="card-body p-0">
        <!--begin::Wizard-->
        <div class="wizard wizard-4" id="kt_wizard" data-wizard-state="step-first" data-wizard-clickable="true">
           
            <!--begin::Card-->
            <div class="card card-custom card-shadowless rounded-top-0">
                <!--begin::Body-->
                <div class="card-body p-0">
                    <div class="row justify-content-center py-5 px-5 py-lg-10 px-lg-10">
                        <div class="col-xl-12 col-xxl-10">
                            <!--begin::Wizard Form-->
                            @using (Html.BeginForm("ChangePassword", "User", FormMethod.Post, new { @class = "form" }))
                            {

                                <div class="row justify-content-center">
                                    <div class="col-xl-9">
                                        <!--begin::Wizard Step 1-->
                                        <div class="my-5 step" data-wizard-type="step-content" data-wizard-state="current">
                                            <h5 class="text-dark font-weight-bold mb-10">Change Password:</h5>
                                            <!--begin::Message-->
                                            @if (Model.DisplayType == 2)
                                            {
                                                <div class="form-group row" style="text-align: center;margin-top: -20px;">
                                                    <label class="col-xl-12 col-lg-12 col-form-label" style="color:red;">Your password has been changed successfully.</label>
                                                </div>
                                            }
                                            <!--end::Message-->
                                            <!--begin::Group-->
                                            <div class="form-group row">
                                                <label class="col-xl-3 col-lg-3 col-form-label">New Password</label>
                                                <div class="col-lg-6 col-xl-6">
                                                    @Html.PasswordFor(r => r.Password, new { @class = "form-control form-control-solid form-control-lg" })
                                                    @Html.ValidationMessageFor(r => r.Password)
                                                </div>
                                            </div>
                                            <!--end::Group-->
                                            <!--begin::Group-->
                                            <div class="form-group row">
                                                <label class="col-xl-3 col-lg-3 col-form-label">Confirm Password</label>
                                                <div class="col-lg-6 col-xl-6">
                                                    @Html.PasswordFor(r => r.ConfirmPassword, new { @class = "form-control form-control-solid form-control-lg" })
                                                    @Html.ValidationMessageFor(r => r.ConfirmPassword)
                                                </div>
                                            </div>
                                            <!--end::Group-->
                                        </div>
                                        <!--end::Wizard Step 1-->
                                        <!--begin::Wizard Actions-->
                                        <div class="d-flex justify-content-between border-top pt-10 mt-15">
                                            <div>
                                                <button type="submit" style="display:inline !important" class="btn btn-success font-weight-bolder px-9 py-4" data-wizard-type="action-submit">Submit</button>
                                            </div>
                                        </div>
                                        <div style="font-size:12px; margin-top:30px;">
                                            <b>Note : </b>The longer the password, the harder it is to crack. Consider a 9-character password or longer. <br />
                                            Things to avoid: Names, places, dictionary words. <br />
                                            Mix it up. Use variations on capitalization, spelling, numbers, and punctuation.
                                        </div>
                                        <!--end::Wizard Actions-->
                                    </div>
                                </div>

                            }

                            <!--end::Wizard Form-->
                        </div>
                    </div>
                </div>
                <!--end::Body-->
            </div>
            <!--end::Card-->
        </div>
        <!--end::Wizard-->
    </div>
</div>
<!--end::Card-->












